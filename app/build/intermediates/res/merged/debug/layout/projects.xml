<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Institutional Projects"
            android:layout_margin="20dp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:id="@+id/text11"
            />

        <ImageView
            android:layout_width="360dp"
            android:layout_height="240dp"
            android:src="@drawable/projects_1"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text11"
            android:layout_margin="10dp"/>


        <ImageView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:src="@drawable/projects_2"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text11"
            android:layout_margin="10dp"
            android:id="@+id/image_1"/>


        <ImageView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:src="@drawable/projects_3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="690dp"/>

        <ImageView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:src="@drawable/projects_4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="750dp"/>

        <ImageView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:src="@drawable/projects_5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="960dp"/>


        <ImageView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:src="@drawable/projects_6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1000dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Externally Funded Projects"
            android:layout_marginTop="1270dp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="360dp"
            android:layout_height="500dp"
            android:src="@drawable/projects_7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1240dp"/>

</RelativeLayout>
</ScrollView>